<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xu.axis.dao.UserDao">

  <select id="getUserByName" resultType="com.xu.axis.model.User">
    SELECT *
    FROM "user"
    WHERE user_name = #{0}
  </select>

  <select id="getUserByID" resultType="com.xu.axis.model.User">
    SELECT *
    FROM "user"
    WHERE user_id = #{0}
  </select>

  <insert id="insertUser" parameterMap="com.xu.axis.model.User">
    INSERT INTO "user"
    (user_id, user_name, password, update_time, update_user_id, user_type)
    VALUES (#{userId}, #{userName}, #{password}, current_date, #{updateUser}, #{userType})
  </insert>
</mapper>